#!/bin/bash
date
sudo apt update
sudo apt install -y \
	build-essential \
	zlib1g-dev uuid-dev libdigest-sha-perl \
	bc \
	bzip2 \
	bison \
	flex \
	git \
	gnupg \
	iasl \
	m4 \
	nasm \
	patch \
	python \
	wget \
	make
#git clone https://github.com/vejmarie/heads
git clone https://github.com/osresearch/heads
wget http://10.0.1.2/packages/go1.9.2.linux-amd64.tar.gz
sudo tar -C /usr/local -xzf go1.9.2.linux-amd64.tar.gz
mkdir -p $HOME/gopath
echo 'export GOROOT=/usr/local/go'   >> ~/.bashrc
echo 'export GOPATH=$HOME/gopath'    >> ~/.bashrc
echo 'export PATH=$PATH:$GOROOT/bin' >> ~/.bashrc

export GOROOT=/usr/local/go
export GOPATH=$HOME/gopath
export PATH=$PATH:$GOROOT/bin

cd heads
wget -r http://10.0.1.2/packages/
mv 10.0.1.2/packages/* packages
#git checkout pkgs_cache
mv ../winterfell.rom blobs
time make BOARD=winterfell CONFIG_UROOT=y MAKE_JOBS="-j20 --max-load 20" UROOT_CMDS="mount boot cat insmod rsdp init pxeboot rush ls lddfiles ln losetup lsmod cat cbmem chmod chroot cmp comm console cp cpio msr dmesg ip dhclient umount"
#time make BOARD=qemu-linuxboot MAKE_JOBS="-j20 --max-load=20" PKGS_PROXY="http://10.0.1.2/"
